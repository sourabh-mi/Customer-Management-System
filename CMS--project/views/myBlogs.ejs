<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="../CSS/style2.css">
    <title>Home</title>
</head>

<body>
    <%- include('../partials/admin/header.ejs')%>

        <div class="container mb-3">
            <a href="/addBlogs"><button class="btn btn-outline-danger mt-3 mb-4 form-control">Add New Blogs</button></a>
        </div>
        <div class="container">
            <div class="row">
                <%record.forEach((result)=>{%>
                    <div class="col-md-3 mx-4 my-3">
                        <div class="card border-danger" style="width: 320px; text-align: justify;">
                            <div class="card-body text-danger">
                                <h5 class="card-title text-center"><strong>
                                        <%=result.title%>
                                    </strong>
                                </h5>
                                <p class="card-text">
                                    <%=result.description%>
                                </p>
                                <p class="card-text">
                                    <%=result.date%>
                                </p>
                            </div>
                            <div class="card-header">
                                <hr>
                                <h5 class="text-center">
                                    <%=result.userName%>
                                        <span><a href="/deleteBlog/<%=result.id%>"><i
                                                    class="bi bi-trash3 float-end"></i></a></span>
                                </h5>
                            </div>
                        </div>
                    </div>
                    <%})%>

            </div>
        </div>
</body>

</html>